<%= simple_form_for pet do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :found_on %>
  <%= f.input :species, collection: Pet::SPECIES %>
  <% if pet.id %>
    <%= f.input :adopted %>
  <% end %>
<% end %>
